    }

    .footer-links a:hover {
        color: #3498db;
        transform: translateX(5px);
    }

    /* Social Links */
    .social-links {
        display: flex;
        gap: 1rem;
        justify-content: center;
        margin-top: 1rem;
    }

    .social-links a {
