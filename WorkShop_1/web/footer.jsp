        font-size: 1.8rem;
        transition: transform 0.3s ease;
    }

    .social-links a:hover {
        transform: scale(1.2);
    }

    /* Copyright */
    .copyright {
        text-align: center;
        padding-top: 2rem;
        border-top: 2px solid rgba(255, 255, 255, 0.2);
        font-size: 0.95rem;
        opacity: 0.8;
    }

    /* Responsive Design */
    @media (max-width: 768px) {
        .footer-container {
            flex-direction: column;
            text-align: center;
        }

        .footer-section {
            text-align: center;
        }

        .social-links {
            justify-content: center;
        }
    }

</style>

